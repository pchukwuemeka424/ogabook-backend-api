<%- include('partials/header', { title: 'Payment Failed - OgaBook' }) %>

<style>
    .failed-container {
        min-height: 100vh;
        background: #f9fafb;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    .failed-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        width: 100%;
        overflow: hidden;
        text-align: center;
    }
    .failed-header {
        background: #ef4444;
        color: white;
        padding: 25px 30px;
    }
    .failed-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0;
    }
    .failed-body {
        padding: 40px 30px;
    }
    .failed-message {
        font-size: 1.1rem;
        color: #374151;
        margin-bottom: 30px;
        line-height: 1.8;
    }
    .info-box {
        background: #fef3c7;
        border-left: 4px solid #f59e0b;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        text-align: left;
    }
    .info-box p {
        margin: 0;
        color: #92400e;
        line-height: 1.6;
    }
    .transaction-details {
        background: #fef2f2;
        border-left: 4px solid #ef4444;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        text-align: left;
    }
    .transaction-details h5 {
        color: #991b1b;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #fecaca;
    }
    .detail-item:last-child {
        border-bottom: none;
    }
    .detail-label {
        font-weight: 600;
        color: #991b1b;
    }
    .detail-value {
        color: #dc2626;
        font-family: monospace;
    }
    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    .btn-primary-custom {
        background: #ef4444;
        border: none;
        border-radius: 12px;
        padding: 14px 28px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }
    .btn-primary-custom:hover {
        background: #dc2626;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(239, 68, 68, 0.4);
        color: white;
    }
    .btn-secondary-custom {
        background: #f3f4f6;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 14px 28px;
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
    }
    .btn-secondary-custom:hover {
        background: #e5e7eb;
        border-color: #d1d5db;
        color: #374151;
        transform: translateY(-2px);
    }
</style>

<div class="failed-container">
    <div class="failed-card">
        <div class="failed-header">
            <h1 class="failed-title">Payment Failed</h1>
        </div>
        
        <div class="failed-body">
            <div class="info-box">
                <p>
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>What to do:</strong> Please check your payment details and try again. 
                    If the problem persists, contact your bank or use a different payment method.
                </p>
            </div>
            
            <div class="transaction-details">
                <h5>
                    <i class="bi bi-receipt"></i>
                    Transaction Details
                </h5>
                <div class="detail-item">
                    <span class="detail-label">Transaction ID:</span>
                    <span class="detail-value" id="transactionId"><%= transactionId || 'N/A' %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Reference:</span>
                    <span class="detail-value" id="txRef"><%= txRef || 'N/A' %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Package:</span>
                    <span class="detail-value"><%= package || 'N/A' %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Billing Cycle:</span>
                    <span class="detail-value"><%= billingCycle || 'N/A' %></span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Amount:</span>
                    <span class="detail-value">â‚¦<%= amount ? parseFloat(amount).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}) : '0.00' %></span>
                </div>
            </div>
            
            <div class="action-buttons">
                <a href="<%= typeof userId !== 'undefined' && userId ? `/?userId=${userId}&status=pending&package=basic&billingCycle=monthly&amount=200` : '/' %>" class="btn-primary-custom">
                    <i class="bi bi-arrow-clockwise"></i>
                    Try Again
                </a>
                <a href="/dashboard" class="btn-secondary-custom">
                    <i class="bi bi-house"></i>
                    Go to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

